<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.orangefly">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!-- the internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/of_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/of_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Orangefly"
        >

        <activity
            android:name= ".SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity
            android:name=".AnotherActivity"
            android:label="Menu Item"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MenuMang" />
            </intent-filter>
        </activity>
    </application>

</manifest>